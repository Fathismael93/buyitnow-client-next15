{
  "name": "buyitnow-client-next15",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --cache --max-warnings=0",
    "lint:fix": "next lint --fix",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:perf": "lighthouse --output=html --output-path=./lighthouse-report.html",
    "analyze": "cross-env ANALYZE=true next build",
    "postbuild": "next-sitemap",
    "clean": "rimraf .next out coverage .eslintcache node_modules/.cache",
    "prebuild": "npm run clean",
    "prod-build": "npm run security && npm run clean && npm run optimize-images && next build",
    "security": "npm audit --production && npx snyk test",
    "optimize-images": "next-image-optimize",
    "check-deps": "npx depcheck",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^15.1.4",
    "@sentry/nextjs": "^9.5.0",
    "@sentry/replay": "^7.116.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.5.1",
    "compression": "^1.8.0",
    "countries-list": "^3.1.1",
    "cross-env": "^7.0.3",
    "helmet": "^7.2.0",
    "mongoose": "^8.9.5",
    "multer": "^1.4.5-lts.1",
    "next": "^15.1.4",
    "next-auth": "^4.24.11",
    "next-connect": "^1.0.0",
    "next-sitemap": "^4.2.3",
    "nodemailer": "^6.9.16",
    "query-string": "^9.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-responsive-pagination": "^2.10.0",
    "react-toastify": "^11.0.3",
    "rimraf": "^6.0.1",
    "server-only": "^0.0.1",
    "sharp": "^0.33.2",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.1",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "cssnano": "^7.0.6",
    "cypress": "^14.1.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.1.4",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-optimize-regex": "^1.2.1",
    "eslint-plugin-prettier": "^5.2.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-testing-library": "^7.1.1",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.4.0",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "snyk": "^1.1295.4",
    "tailwindcss": "^4.0.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  }
}
